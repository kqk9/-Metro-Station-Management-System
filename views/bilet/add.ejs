<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Ticket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="../styles/add.css" rel="stylesheet">
</head>
<body>
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1><i class="fas fa-ticket-alt me-3"></i>Add New Ticket</h1>
                <a href="/bilet" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="container py-5">
        <div class="card mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h2 class="text-center mb-4">Ticket Details</h2>
                <form action="/bilet/add" method="POST">
                    <div class="mb-3">
                        <label for="Yolcu_adi" class="form-label">Passenger Name</label>
                        <input type="text" class="form-control search-input" id="Yolcu_adi" name="Yolcu_adi" placeholder="Enter passenger name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Kalkis_istasyon" class="form-label">Departure Station</label>
                        <select class="form-control search-input" id="Kalkis_istasyon" name="Kalkis_istasyon" required>
                            <% stations.forEach(station => { %>
                                <option value="<%= station.Baslangic_istasyon %>"><%= station.Baslangic_istasyon %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Varis_istasyon" class="form-label">Arrival Station</label>
                        <select class="form-control search-input" id="Varis_istasyon" name="Varis_istasyon" required>
                            <% stations.forEach(station => { %>
                                <option value="<%= station.Bitis_istasyon %>"><%= station.Bitis_istasyon %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Ucret" class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control search-input" id="Ucret" name="Ucret" placeholder="Enter price" required>
                    </div>
                    <div class="mb-3">
                        <label for="Tarih" class="form-label">Date</label>
                        <input type="date" class="form-control search-input" id="Tarih" name="Tarih" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-add">
                            <i class="fas fa-check me-2"></i>Add Ticket
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
