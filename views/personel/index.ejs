<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personel Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
   <link rel="stylesheet" href="styles/styles.css">
</head>
<body>
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1><i class="fas fa-users me-3"></i>Personel Management</h1>
                <a href="/" class="btn btn-back">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        <% if (locals.message) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <div class="row mb-4 align-items-center">
            <div class="col-md-6">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" class="form-control search-input" placeholder="Search by name...">
                </div>
            </div>
            <div class="col-md-6 text-end">
                <a href="/personel/add" class="btn btn-add">
                    <i class="fas fa-plus me-2"></i>Add New Personnel
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="fas fa-id-card me-2"></i>ID</th>
                        <th><i class="fas fa-user me-2"></i>Name</th>
                        <th><i class="fas fa-user me-2"></i>Surname</th>
                        <th><i class="fas fa-briefcase me-2"></i>Position</th>
                        <th><i class="fas fa-money-bill-wave me-2"></i>Salary</th>
                        <th><i class="fas fa-cog me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody id="personalTableBody">
                    <% personal.forEach(person => { %>
                        <tr>
                            <td><%= person.personalID %></td>
                            <td><%= person.Ad %></td>
                            <td><%= person.Soyad %></td>
                            <td><%= person.Pozisyon %></td>
                            <td><%= person.Maas %></td>
                            <td class="action-buttons">
                                <a href="/personel/edit/<%= person.personalID %>" class="btn btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/personel/delete/<%= person.personalID %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this personnel?')">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/personel.js"></script>
</body>
</html>